{% extends "layouts/base-blog.njk" %}

{% set metaTitle %}{{ title }} Â· {{ site.blog.title | safe }}{% endset %}
{% set metaDescription = description %}

{% block content %}
  <article>
    <header class="page-header">
      <h1 class="post-title">
        {{ title }}<span class="text-colored" aria-hidden="true">.</span>
      </h1>
      <nav class="home-nav">
        <a href="{{ site.blogHome }}" class="home-link">{{ blog[locale].toOverview | safe }}</a>
      </nav>
      <div class="post-meta">
        Published on <time datetime="{{ page.date | dateTimeDate }}">{{ page.date | displayDate }}</time>
      </div>
    </header>

    <div class="text-section blog-text-section">
      {{ content | safe }}
    </div>

    <footer class="post-footer">
      <p>
        Any thoughts or comments?
        Say hello <a href="https://twitter.com/lara_amalia" target="_blank" rel="noopener noreferrer">on Twitter</a>!
      </p>
    </footer>
  </article>
{% endblock %}
