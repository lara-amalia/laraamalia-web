---
permalink: blog/feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.blog.title }}</title>
  <subtitle>{{ site.blog.description }}</subtitle>
  <link href="{{ site.baseUrl }}/blog/feed.xml" rel="self" type="application/atom+xml" />
  <link href="{{ site.baseUrl }}/blog" rel="alternate" type="text/html"/>
  <author>
    <name>{{ site.name }}</name>
  </author>
  <updated>{{ collections.post | rssLastUpdatedDate }}</updated>
  <id>{{ site.baseUrl }}/blog/</id>
  {%- for post in collections.post %}
    <entry>
      {% set absolutePostUrl %}{{ site.baseUrl }}{{ post.url }}{% endset %}
      <title>{{ post.data.title }}</title>
      <link href="{{ absolutePostUrl }}"/>
      <updated>{{ post.date | rssDate }}</updated>
      <id>{{ absolutePostUrl }}</id>
      <content type="html"><![CDATA[
        {{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) | safe }}
      ]]></content>
    </entry>
  {%- endfor %}
</feed>
