{% extends "layouts/base-page.njk" %}

{% set metaTitle = site[locale].metaTitle %}
{% set metaDescription = site[locale].metaDescription %}
{% set pageTitle = index[locale].greeting %}

{% block content %}
<div class="grid-base index-grid">
  <div class="web-header">
    <div>
      <p>{{ index[locale].web.header | safe }}</p>
      <a
        href="https://www.scale.at"
        target="_blank"
        rel="noopener noreferrer"
        class="nav-link"
        title="portfolio of scale – your web solutions"
        aria-label="scale – your web solutions. link to portfolio"
      >{{ index[locale].web.headerLink | safe }}</a>
    </div>

  </div>
  <div class="music-header ">
    <div>
      <span class="music-header-text">{{ index[locale].music.header | safe }}</span><br />
      <a href="{{ site[locale].homePath }}music" class="nav-link">
        {{ index[locale].music.headerLink | safe }}
      </a>
    </div>
    <div class="web-social">
      <a
        href="https://www.youtube.com/channel/UCUxZSiFxcTyBCtXJA7wX12g"
        target="_blank"
        rel="noopener noreferrer"
        class="social-link social-link-youtube"
        title="LaraAmaliaMusic on YouTube"
        aria-label="LaraAmaliaMusic on YouTube"
      >
        {% include "../partials/icons/_youtube-icon.njk" %}
      </a>
      <a
        href="https://www.facebook.com/LaraAmaliaMusic/"
        target="_blank"
        rel="noopener noreferrer"
        class="social-link social-link-facebook"
        title="LaraAmaliaMusic on Facebook"
        aria-label="LaraAmaliaMusic on Facebook"
      >
        {% include "../partials/icons/_facebook-icon.njk" %}
      </a>
      <a
        href="https://www.instagram.com/laraamaliamusic/"
        target="_blank"
        rel="noopener noreferrer"
        class="social-link social-link-instagram"
        title="LaraAmaliaMusic on Instagram"
        aria-label="LaraAmaliaMusic on Instagram"
      >
        {% include "../partials/icons/_instagram-icon.njk" %}
      </a>
    </div>
  </div>
  <div class="intro music-intro">
    <h2>
      {{ index[locale].music.intro.header }}<span class="text-colored" aria-hidden="true">.</span>
    </h2>
    <p>
      {{ index[locale].music.intro.text1 | safe }}
    </p>
    <p>
      {{ index[locale].music.intro.text2 }}
      <a href="https://www.anderschor.at" target="_blank" rel="noopener noreferrer">anders_chor</a>.
    </p>
    <nav class="inpage-nav">
      <a href="{{ site[locale].homePath }}music" class="nav-link"
      >{{ index[locale].music.nav.concerts }}</a
      ><br />
      <a href="{{ site[locale].homePath }}music/projects" class="nav-link"
      >{{ index[locale].music.nav.projects }}</a
      >
    </nav>
  </div>
  <p class="subheader music-subheader">
    {{ index[locale].music.subHeader }}<span class="text-colored" aria-hidden="true">.</span>
  </p>
  <div class="bg-blue-base bg-blue-ingrid" aria-hidden="true"></div>
  <div class="band-intro">
    <h2>{{ index[locale].music.band.header }}<span class="text-colored" aria-hidden="true">.</span></h2>
    <p>
      {{ index[locale].music.band.text1 }}
    </p>
    <p>
      {{ index[locale].music.band.text2 }}
      <a href="https://youtu.be/afFgrD9Aioo" target="_blank" rel="noopener noreferrer">Bring mi zruck åns Meer (YouTube)</a>.
    </p>
  </div>
  <div class="img-lara-band">
    <div class="bg-blue-base bg-blue-lara-band" aria-hidden="true"></div>
    <img
      src="/assets/images/lara-band-800.jpg"
      srcset="
        /assets/images/lara-band-400.jpg   400w,
        /assets/images/lara-band-600.jpg   600w,
        /assets/images/lara-band-800.jpg   800w,
        /assets/images/lara-band-1000.jpg 1000w,
        /assets/images/lara-band-1200.jpg 1200w"
      sizes="(min-width: 700px) 50vw, (min-width: 1080px) 630px, 100vw"
      alt="Lara Amalia und Band"
    />
  </div>
  <img
    src="/assets/images/lara-smile.jpg"
    srcset="
      /assets/images/lara-smile-400.jpg   400w,
      /assets/images/lara-smile.jpg       630w,
      /assets/images/lara-smile-800.jpg   800w,
      /assets/images/lara-smile-1000.jpg 1000w,
      /assets/images/lara-smile-1200.jpg 1200w"
      sizes="(min-width: 700px) 50vw, (min-width: 1080px) 630px, 100vw"
      alt="Lara Amalia"
      class="img-lara-smile"
  />
  <div class="intro misc-intro">
    <p>{{ index[locale].misc.cat }}</p>
    <p>{{ index[locale].misc.maryHarry }}</p>
    <p>{{ index[locale].misc.running }}</p>
    <p>{{ index[locale].misc.sea }}</p>
  </div>
  <div class="contact-info">
    <h2>{{ index[locale].contact.header }}</h2>
    <p>
      {{ index[locale].contact.text | safe }}
    </p>
    <div class="contact-footer">
      <div class="contact-links">
        <span>{{ index[locale].contact.scale }}</span>
        <a
          href="https://www.scale.at"
          target="_blank"
          rel="noopener noreferrer"
        >scale – your web solutions.</a
        >
      </div>
      &copy; 2022 – Lara Aigmüller&nbsp;<span class="text-colored" aria-hidden="true">//</span>&nbsp;Linz
    </div>
  </div>
</div>
<div class="index-grid-background" aria-hidden="true">
  <div class="bg-blue-base bg-blue-right" aria-hidden="true"></div>
  <div class="bg-dev-base bg-dev-block" aria-hidden="true">
    &lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;&lt;&gt;
  </div>
</div>
{% endblock %}
